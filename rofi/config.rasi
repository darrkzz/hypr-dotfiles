configuration {
    modi: "drun,run,ssh";
    show-icons: true;
    icon-theme: "Papirus"; /* Ou o tema de ícones que você usa (ex: Adwaita, Breeze) */
    drun {
        display-format: "{icon} {name}";
    }
    location: 0; /* Posição do Rofi na tela (0 = centro) */
    yoffset: 0;
    xoffset: 0;
}

@theme "Graphite"